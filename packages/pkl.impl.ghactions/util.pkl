import "@com.github.actions/Workflow.pkl"

typealias OS = "windows" | "macOS" | "linux"

local function determineOSRunsOn(input: String): OS? =
  if (input.contains("windows"))
    "windows"
  else if (input.contains("macos"))
    "macOS"
  else if (input.contains("ubuntu"))
    "linux"
  else
    null

/// Tries to determine the OS for a workflow job.
function determineOS(job: Workflow.Job): OS? =
  let (runsOn = job.`runs-on`)
    if (runsOn is String)
      determineOSRunsOn(runsOn)
    else
      runsOn.fold(null, (os, runsOn) -> os ?? determineOSRunsOn(runsOn))
