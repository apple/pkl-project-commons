module pkl.impl.ghactions.jobs.HawkeyeCheck

extends "PklJob.pkl"

import "@com.github.actions/catalog.pkl"

image: String =
  "ghcr.io/korandoru/hawkeye@sha256:c3ab994c0d81f3d116aabf9afc534e18648e3e90d7525d741c1e99dd8166ec85"

configPath: String = "licenserc.toml"

failIfUnknown: Boolean = true

failIfMissing: Boolean = false

fixed job {
  `runs-on` = "ubuntu-latest"
  container {
    image = module.image
  }
  name = "hawkeye-check"
  steps {
    (catalog.`actions/checkout@v6`) {
      with {
        // required to result git attrs
        `fetch-depth` = 0
      }
    }
    new {
      run =
        new Listing {
          "hawkeye check"
          "--config \(configPath)"
          when (failIfUnknown) {
            "--fail-if-unknown"
          }
          when (failIfMissing) {
            "--fail-if-missing true"
          }
        }.join(" ")
    }
  }
}
