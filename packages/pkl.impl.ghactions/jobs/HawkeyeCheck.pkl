module pkl.impl.ghactions.jobs.HawkeyeCheck

import "@gha/actions/Common.pkl"
import "@gha/Workflow.pkl"

image: String =
  "ghcr.io/korandoru/hawkeye@sha256:c3ab994c0d81f3d116aabf9afc534e18648e3e90d7525d741c1e99dd8166ec85"

configPath: String = "licenserc.toml"

failIfUnknown: Boolean = true

failIfMissing: Boolean = false

local self = this

fixed job: Workflow.Job = new {
  // TODO when upstream pkl-gha supports it
  // This is currently injected in ../PklCI.pkl via an output converter
  // container {
  //   image = self.image
  // }
  `runs-on` = "ubuntu-latest"
  name = "hawkeye-check:\(image)"
  steps {
    new Common.Checkout {
      with {
        // required to result git attrs
        `fetch-depth` = 0
      }
    }
    new {
      run =
        new Listing {
          "hawkeye check"
          "--config \(configPath)"
          when (failIfUnknown) {
            "--fail-if-unknown"
          }
          when (failIfMissing) {
            "--fail-if-missing true"
          }
        }.join(" ")
    }
  }
}
