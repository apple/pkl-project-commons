amends "@pkl.impl.ghactions/PklCI.pkl"

import "@gha/actions/Common.pkl"
import "@gha/actions/Setup.pkl"
import "@gha/Workflow.pkl"

local buildAndTest: Workflow = new {
  jobs {
    ["build-and-test"] {
      `runs-on` = "ubuntu-latest"
      steps {
        new Common.Checkout {
          with {
            // needed for Spotless
            `fetch-depth` = 0
          }
        }
        new Setup.Java {
          with {
            `java-version` = "21"
            distribution = "temurin"
            cache = "gradle"
          }
        }
        new {
          name = "Gradle build"
          run = "./gradlew build"
        }
      }
    }
  }
}

prb = buildAndTest

build = buildAndTest

// note: we deploy packages from our own machines, not from CI.
// see README.adoc for instructions on publishing.
main = buildAndTest

testReports {
  junit {
    "build/test-results/**/*.xml"
  }
}
